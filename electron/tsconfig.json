{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "outDir": "../dist-electron",
        "rootDir": "..",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "types": [
            "node"
        ]
    },
    "include": [
        "**/*.ts",
        "../dashboard-ui/lib/ipc/types.ts"
    ],
    "exclude": [
        "node_modules",
        "../dashboard-ui/node_modules"
    ]
}