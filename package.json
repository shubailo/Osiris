{
    "name": "meta-analysis-ai",
    "version": "1.0.0",
    "description": "AI-powered meta-analysis assistant for medical researchers",
    "main": "dist-electron/electron/main.js",
    "author": "Meta-Analysis Team",
    "license": "MIT",
    "private": true,
    "scripts": {
        "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
        "dev:renderer": "cd dashboard-ui && npm run dev",
        "dev:electron": "tsc -p electron/tsconfig.json && electron .",
        "build": "npm run build:renderer && npm run build:electron",
        "build:renderer": "cd dashboard-ui && npm run build",
        "build:electron": "tsc -p electron/tsconfig.json",
        "build:windows": "npm run build && electron-builder --windows --x64",
        "postinstall": "electron-builder install-app-deps"
    },
    "dependencies": {
        "better-sqlite3": "^11.6.0",
        "canvas": "^3.2.1",
        "electron-store": "^10.0.0",
        "electron-updater": "^6.3.9",
        "pdf-parse": "^1.1.1"
    },
    "devDependencies": {
        "@types/better-sqlite3": "^7.6.11",
        "@types/node": "^22.0.0",
        "@types/pdf-parse": "^1.1.4",
        "concurrently": "^9.1.0",
        "electron": "^33.2.0",
        "electron-builder": "^25.1.8",
        "typescript": "^5.7.2"
    },
    "build": {
        "appId": "com.metaanalysis.ai",
        "productName": "Meta-Analysis AI",
        "directories": {
            "output": "dist",
            "buildResources": "resources"
        },
        "files": [
            "dist-electron/**/*",
            "dashboard-ui/out/**/*",
            "electron/db/schema.sql",
            "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
            "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
            "!**/node_modules/*.d.ts",
            "!**/node_modules/.bin",
            "!**/*.ts",
            "!*.map"
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "resources/icon.png"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "IRIS Meta-Analysis"
        }
    }
}